<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBD3F8"
    android:paddingHorizontal="15dp"
    tools:context=".NestedLayoutActivity">

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E073F"
        android:text="Hello, My name is Jorim Pablico"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/myname">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15dp"
            android:textSize="20sp"
            android:textColor="#2E073F"
            android:text="I’m an IT student with a passion for front-end development. I’m skilled in HTML, CSS, and programming languages like C#, C++, and Java. Right now, I’m learning Android development and plan to work on Android app projects once I finish my studies. Outside of tech, I enjoy playing basketball and spending time alone at home." />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textColor="#EBD3F8"
            android:text="Click me" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textColor="#2E073F"
        android:gravity="center"
        android:text="© 2024 Pablico | All rights reserved" />

</RelativeLayout>